<section id="log-in" class="logg">
  <div class="container logg-content">
    <div class="row">
      <div class="col-xs-12">
        <a href="/"><%= image_tag("logo-white.png", alt: "Logo PetaTime") %></a>
        <!-- <h3>Log in</h3> -->
        <div class="separate-line"></div>
          <div class="col-xs-6 text-center">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

                <p><span class="color-white">Email.</span> Please enter your Email.</p>
                <%= f.email_field :email, autofocus: true %>

                <p><span class="color-white">Password.</span> Please enter your Password. (min. 6 characters)</p>
                <%= f.password_field :password, autocomplete: "off" %>

                <p><span class="color-white">Password.</span> Please enter your Password again.</p>
                <%= f.password_field :password_confirmation, autocomplete: "off" %>

                <%= render(:partial => "form", :locals => {:f => f})%>

              <div class="actions">
                <%= f.submit "Sign up" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>

          </div>
          <div class="col-xs-6">
            <div id="txt" class=""></div>
            <div class="clearfix"></div>
          </div>
          <div class="clearfix"></div>
        <div class="separate-line"></div>
      </div>
    </div>
  </div>
</section>

<script>
      function startTime() {
        var today = new Date();
        var h = today.getHours();
        var m = today.getMinutes();
        var s = today.getSeconds();
        m = checkTime(m);
        s = checkTime(s);
        document.getElementById('txt').innerHTML = h + ":" + m + ":" + s;
        var t = setTimeout(startTime, 500);
    }
    function checkTime(i) {
        if (i < 10) {i = "0" + i};  // add zero in front of numbers < 10
        return i;
    }
    startTime();
</script>

