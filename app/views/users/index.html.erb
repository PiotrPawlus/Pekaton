<header id="index-header">
    <div class="container-fluid">
        <div class="row">
            <a href="/"><%= image_tag("logo-black.png", alt: "Logo PetaTime") %></a>
            <!-- <img src="/images/logo-black.png" alt="LOGO" class="pull-left"> -->
            <ul class="pull-right">
                <li class="pull-left"><a href="/works_time">Leader Board</li>
                <li class="pull-left">
                    <% if user_signed_in? %>
                        <%= link_to "Wyloguj", destroy_user_session_path, :method => :delete %>
                    <% else %>
                        <%= link_to('Login', new_user_session_path)  %>
                    <% end %>
                </li>
                <li class="pull-left"><i id="open-sidebar" class="fa fa-bars" aria-hidden="true"></i></li>
            </ul>
            <div class="clearfix"></div>
        </div>
    </div>
</header>

<% if current_user.is_admin? %>
  <section id="leader_board">
    <div class="container">
      <div class="row">
        <h2 class="text-center">Admin Board</h2>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <table class="table table-striped table-hover" id="example">
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Surname</th>
              <th>E-mail</th>
              <th>is_admin</th>
              <th>created_at</th>
              <th>updated_at</th>
              <th>Actions</th>

            </tr>
            <% @users.each do |user| %>
              <tr>
                <th><%= user.id %></th>
                <th><%= user.name %></th>
                <th><%= user.surname %></th>
                <th><%= user.email %></th>
                <th><%= user.is_admin%></th>
                <th><%= user.created_at.strftime("%m/%d/%y %H:%M") %></th>
                <th><%= user.updated_at.strftime("%m/%d/%y %H:%M") %></th>
                <% if current_user.id != user.id %>
                  <% if user.is_admin%>
                    <th class="pull-right">
                      <%= link_to("Not Admin", {:action => 'update', :id => user.id}, :class=>"btn btn-raised btn-warning")%>
                    </th>
                  <% else %>
                    <th class="pull-right">
                      <%= link_to("Admin", {:action => 'update', :id => user.id}, :class=>"btn btn-raised btn-warning")%>
                    </th>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </section>
<% end %>

<div id="background-black" class="background-black-disactive"></div>

  <aside id="sidebar" class="sidebar-close">
      <div class="sidebar-header">
          <h5 class="text-center">MENU</h5>
          <i id="close-sidebar" class="fa fa-times pull-right" aria-hidden="true"></i>
      </div>
      <div class="sidebar-menu">
          <ul>
              <a href="/"><li><i class="fa fa-home" aria-hidden="true"></i>HOME</li></a>
              <a href="/works_time"><li><i class="fa fa-briefcase" aria-hidden="true"></i>Leader Board</li></a>
              <a href="#"><li><i class="fa fa-certificate" aria-hidden="true"></i>My stats</li></a>
              <a href="#"><li><i class="fa fa-cog" aria-hidden="true"></i>Settings</li></a>
              <% if user_signed_in? %>
                  <li><i class="fa fa-sign-out" aria-hidden="true"></i><%= link_to "Wyloguj", destroy_user_session_path, :method => :delete %> </li>
              <% else %>
                  <li><i class="fa fa-sign-out" aria-hidden="true"></i><%= link_to('Login', new_user_session_path)  %></li>
              <% end %>
          </ul>
      </div>
  </aside>

