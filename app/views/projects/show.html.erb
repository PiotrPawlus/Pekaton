<section id="leader_board">
  <div class="container">
    <div class="row">
      <div class="col-xs-12" style="text-align: center;">
        <h2 class="text-center">Projects</h2>
        <%= link_to({:action => 'index'}, :class=>"btn btn-default margin-bottom-25") do%>
          <i class="fa fa-arrow-left" aria-hidden="true"></i> Back
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">

        <table class="table table-striped table-hover" id="example">
          <tr>
            <th>ID Task</th>
            <th>Task Name</th>
            <th>Is done</th>
            <th>Task data of create</th>
            <th>Task data of last update</th>
          </tr>
          <% @tasks.each do |task| %>
            <% if task.project_id === @project.id %>
            <tr>
              <th><%= task.id %></th>
              <th><%= task.title %></th>
              <th><%= task.is_done %></th>
              <th><%= task.created_at%></th>
              <th><%= task.updated_at %></th>
            </tr>
            <% end %>
          <% end %>
        </table>

      </div>
    </div>
  </div>
</section>


