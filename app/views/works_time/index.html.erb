<header id="index-header">
    <div class="container-fluid">
        <div class="row">
            <a href="/"><%= image_tag("logo-black.png", alt: "Logo PetaTime") %></a>
            <!-- <img src="/images/logo-black.png" alt="LOGO" class="pull-left"> -->
            <ul class="pull-right">
                <li class="pull-left"><a href="/works_time">Leader Board</li>
                <li class="pull-left">
                    <% if user_signed_in? %>
                        <%= link_to "Wyloguj", destroy_user_session_path, :method => :delete %>
                    <% else %>
                        <%= link_to('Login', new_user_session_path)  %>
                    <% end %>
                </li>
                <li class="pull-left"><i id="open-sidebar" class="fa fa-bars" aria-hidden="true"></i></li>
            </ul>
            <div class="clearfix"></div>
        </div>
    </div>
</header>

<!-- <section class="edit-delete">
</section> -->

<section id="leader_board">
  <div class="container">
    <div class="row">
      <h2 class="text-center">Leader Board</h2>
      <div class="col-xs-12 col-md-2 start-stop-button nopadding">
        <button class="btn btn-primary btn-raised btn-lg">Start</button>
        <button class="btn btn-info btn-raised btn-lg">Break</button>
        <button class="btn btn-danger btn-raised btn-lg">Stop</button>
      </div>
      <div class="col-xs-12 col-md-10 pull-right">
        <p>
          <%= render(:partial => "new")%>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <table class="table table-striped table-hover">
          <tr>
            <th>ID</th>
            <th>Rozpoczęto</th>
            <th>Zakończono</th>
            <th class="pull-right">Akcje</th>
          </tr>
          <% @works_time.each do |time|%>
            <tr>
              <th><%= time.id %></th>
              <th><%= time.start_at %></th>
              <th><%= time.end_at %></th>
              <th class="pull-right">
                <%= link_to("Edit", {:action => 'edit', :id => time.id}, :class=>"btn btn-raised btn-warning")%>
                <%= link_to("Delete", {:action => 'destroy', :id => time.id }, :class=>"btn btn-raised btn-danger")%>
              </th>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</section>



<div id="background-black" class="background-black-disactive"></div>

  <aside id="sidebar" class="sidebar-close">
      <div class="sidebar-header">
          <h5 class="text-center">MENU</h5>
          <i id="close-sidebar" class="fa fa-times pull-right" aria-hidden="true"></i>
      </div>
      <div class="sidebar-menu">
          <ul>
              <a href="/"><li><i class="fa fa-home" aria-hidden="true"></i>HOME</li></a>
              <a href="/works_time"><li><i class="fa fa-briefcase" aria-hidden="true"></i>Leader Board</li></a>
              <a href="#"><li><i class="fa fa-certificate" aria-hidden="true"></i>My stats</li></a>
              <a href="#"><li><i class="fa fa-cog" aria-hidden="true"></i>Settings</li></a>
              <% if user_signed_in? %>
                  <li><i class="fa fa-sign-out" aria-hidden="true"></i><%= link_to "Wyloguj", destroy_user_session_path, :method => :delete %> </li>
              <% else %>
                  <li><i class="fa fa-sign-out" aria-hidden="true"></i><%= link_to('Login', new_user_session_path)  %></li>
              <% end %>
          </ul>
      </div>
  </aside>



  <footer>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 text-center footer-content">
                <%= image_tag("logo-white.png", alt: "Logo PetaTime") %>
                <p>© Copyright 2016 PetaTime - All Rights Reserved. Powered by Ruby on Rails.</p>
                <p>Made by Kuba & Piotrek</p>
            </div>
        </div>
    </div>
</footer>
