<section id="leader_board">
  <div class="container">
    <div class="row">

      <div class="col-xs-12" style="text-align: center;">
        <h2 class="text-center">Leader Board</h2>

        <%= link_to({:action => 'index'}, :class=>"btn btn-default margin-bottom-25") do%>
            <i class="fa fa-arrow-left" aria-hidden="true"></i> Back
        <% end %>
        <%= form_for(:work_time, :url => {:action => "update", :id => @work_time.id}) do |field|%>
          <div class="single_task">
            <p><%= field.label(:start_at, "Start: ")%></p>
            <%= field.datetime_select :start_at, :ampm => true, :minute_step => 15, date_separator: '', time_separator: '', datetime_separator: '' %>
          </div>
          <div class="clearfix"></div>
          <div class="single_task">
            <p><%= field.label(:end_at, "Stop: ")%></p>
            <%= field.datetime_select :end_at, :ampm => true, :minute_step => 15, date_separator: '', time_separator: '', datetime_separator: '' %>
          </div>
          <div class="">
            <%= field.label(:task_id, "Task:") %>
            <%= field.select(:task_id, @tasks.map{|t| [t.title, t.id]}, :class => 'form-control' )%>
          </div>
          <div class="clearfix"></div>
          <div class="single_task_accept pull-right">
            <%= submit_tag("Save", class:"btn btn-raised btn-success") %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">

    </div>
  </div>
</section>


